<Page x:Class="DietPlanner.Pages.RecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DietPlanner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Progress">

    <Grid Background="AntiqueWhite">
        <TextBlock
            Text="Recipe"
            Foreground="{DynamicResource PrimaryBackgroundColor}"
            FontSize="50"
            TextAlignment="Center"/>
        <TextBox Name="Search" Width="250" Height="30" Margin="0 0 0 200" TextChanged="Search_TextChanged"></TextBox>
        <TextBlock x:Name="show_recipe" Width="400" Height="250" VerticalAlignment="Bottom"></TextBlock>
        <Button x:Name="But_Search" Width="30" Height="30" Margin="300 0 0 200" Click="But_Search_Click"></Button>
    </Grid>
</Page>
